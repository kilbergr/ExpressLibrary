<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Home</title>
</head>
<body>
<h2>Your books: </h2>
	<table>
		<thead>
			<th>Title</th>
			<th>Author</th>
			<th>Year Published</th>
			<th>Delete?</th>
			<th>Edit?</th>
		</thead>
		<% books.forEach(function(book){ %>
		<tr>
			<td><%= book.title%></td>
			<td><%= book.author%></td>
			<td><%= book.date%></td>
			<td><form action="/books?=_method=DELETE" method="POST"><input type="submit" value="Delete"></form></td>
			<td><a href="/books/<%= book.id%>/edit">Edit Book Info</a></td>
		</tr>
		<% }) %>
	</table>
	<button><a href="/books/new">Add Book</a></button>
</body>
</html>