<!DOCTYPE html>
<html lang="en">
<head>
 <% include ../partials/head %>
	<title>Home</title>
</head>
<body>
<h2>Your books: </h2>
	<table>
		<thead>
			<th>Title</th>
			<th>Author</th>
			<th>Year Published</th>
			<th>Delete?</th>
			<th>Edit?</th>
		</thead>
		<% books.forEach(function(book){ %>
		<tr>
			<td><%= book.title%></td>
			<td><%= book.author%></td>
			<td><%= book.date%></td>
			<td><form action="/books/<%=book.id%>?_method=delete" method="POST"><input type="submit" value="Delete"></form></td>
			<td><a href="/books/<%= book.id%>/edit">Edit Book Info</a></td>
		</tr>
		<% }) %>
	</table>
	<a href="/books/new"><button>Add Book</button></a>
	<a href="/books/sort"><button>Sort Books Alphabetically by Title</button></a>
	<a href="/books"><button>Main Index</button></a>
	 <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>